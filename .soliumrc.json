{
	"extends": "solium:all",
	"plugins": ["security"],
	"rules": {
		"mixedcase": ["error"],
		"blank-lines": ["error"],
		"quotes": ["error", "double"],
		"no-empty-blocks": "error",
		"indentation": ["error", 4],
		"max-len": ["warning", 120],
		"no-constant": ["error"],
		"whitespace": ["error"],
		"security/enforce-explicit-visibility": ["error"],
		"security/no-block-members": ["warning"],
		"security/no-inline-assembly": ["warning"]
	}
}
